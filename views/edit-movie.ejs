<%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navbar.ejs') %>
    <main class="form-movie">
        <form action="/<% if (editing) { %>edit-movie<% } else { %>add-movie<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= movie.title %><% } %>">
            </div>
            <div class="form-control grade">
                <label for="grade">Grade</label>
                <input type="number" name="grade" id="grade" step="0.1" min="0" max="10" value="<% if (editing) { %><%= movie.grade %><% } %>">
            </div>
            <div class="form-control">
                <label for="year">Year</label>
                <input type="number" name="year" id="year" step="1" min="1900" max="<%= new Date().getFullYear() + 1%>" value="<% if (editing) { %><%= movie.year %><% } %>">
            </div>
            <div class="form-control">
                <label for="synopsis">Synopsis</label>
                <textarea name="synopsis" id="synopsis" rows="5"><% if (editing) { %><%= movie.synopsis %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="posterUrl">Poster URL</label>
                <input type="text" name="posterUrl" id="posterUrl" value="<% if (editing) { %><%= movie.posterUrl %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= movie.id %>" name="movieId">
            <% } %>
            <button class="btn" type="submit"><% if (editing) { %>Update Movie<% } else { %>Add Movie<% } %></button>
        </form>
    </main>
    <%- include('includes/end.ejs') %> 